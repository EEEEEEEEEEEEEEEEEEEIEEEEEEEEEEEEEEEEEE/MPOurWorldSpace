.scroll-nav {
  height: 96rpx;
}

.scroll-nav .inner {
  align-items: center;
  display: flex;
  justify-content: flex-start;
  position: relative;
  padding: 0 32rpx;
}

.scroll-nav text {
  border-radius: 40rpx;
  display: block;
  font-size: 28rpx;
  line-height: 64rpx;
  margin: 0 4px;
  padding: 0 32rpx;
  position: relative;
  text-align: center;
  max-width: 400rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  z-index: 1;
}

.scroll-nav .current {
  background-color: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, .05),
              0 8rpx 16rpx rgba(0, 0, 0, .05),
              0 16rpx 32rpx rgba(0, 0, 0, .05);
  z-index: 2;
}
