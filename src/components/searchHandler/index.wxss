.search-handler {
  padding: 40rpx;
  position: relative;
  z-index: 2;
}

.search-handler .inner {
  background-color: #fff;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .05),
              0 4px 8px rgba(0, 0, 0, .05),
              0 8px 16px rgba(0, 0, 0, .05);
  border: 1px #fafafa solid;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}

.search-handler .inner icon {
  margin: 10px;
  opacity: 0.5;
}

.search-handler .inner .text {
  opacity: 0.5;
  font-size: 12px;
  line-height: 80rpx;
}
