.collect-handler {
  align-items: center;
  background-image: linear-gradient(to right top, #ff4d4d, #fcbe98);
  box-shadow: 0 12rpx 32rpx rgba(255, 77, 77, 0.5);
  border-radius: 50%;
  color: #fff;
  display: flex;
  justify-content: center;
  margin: 64rpx auto;
  padding: 0;
  height: 128rpx;
  overflow: hidden;
  position: relative;
  text-align: center;
  width: 128rpx;
}

.collect-handler icon {
  position: relative;
  z-index: 1;
}

.collect-handler button {
  opacity: 0;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 2;
}
