.book-item {
  align-items: flex-start;
  background-color: #fff;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .05),
              0 4px 8px rgba(0, 0, 0, .05),
              0 8px 16px rgba(0, 0, 0, .05);
  border-radius: 24rpx;
  display: flex;
  justify-content: space-between;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
  padding: 20rpx;
  position: relative;
}

/* 封面 */
.cover-wrap {
  flex-shrink: 0;
  position: relative;
  width: 128rpx;
}

.cover {
  height: 0;
  padding-bottom: 144.8275%;
  position: relative;
  z-index: 2;
}

.cover image {
  background-color: #eee;
  border-radius: 10rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}

/* 收藏切换 */
.collect {
  background-color: #f90;
  border-radius: 50%;
  height: 16rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 16rpx;
}

/* 信息 */
.info {
  flex: 1;
  overflow: hidden;
  position: relative;
  margin-left: 20rpx;
  margin-right: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  line-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.author {
  color: #999;
  display: block;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.attr {
  align-items: center;
  display: flex;
  justify-content: space-between;
}

.popularity {
  color: #999;
  font-size: 24rpx;
}
