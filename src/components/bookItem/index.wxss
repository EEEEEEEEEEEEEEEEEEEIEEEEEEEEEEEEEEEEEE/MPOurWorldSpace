.book-item {
  margin: 40rpx 20rpx 0;
  transition: all .3s ease;
}

.book-item-hover {
  transform: scale(.95);
}

/* 封面 */
.cover-wrap {
  background-color: #fff;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .05),
              0 4px 8px rgba(0, 0, 0, .05),
              0 8px 16px rgba(0, 0, 0, .05);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  padding: 10rpx;
  position: relative;
}

.cover-wrap::before, .cover-wrap::after {
  background-color: #fff;
  content: '';
  position: absolute;
  border-radius: 0 8rpx 8rpx 0;
  top: 50%;
  width: 8rpx;
}

.cover-wrap::before {
  opacity: .75;
  top: 24rpx;
  bottom: 24rpx;
  right: -7rpx;
  z-index: 1;
}

.cover-wrap::after {
  opacity: .35;
  top: 32rpx;
  bottom: 32rpx;
  right: -14rpx;
  z-index: 0;
}

.cover {
  height: 0;
  padding-bottom: 144.8275%;
  position: relative;
  z-index: 2;
}

.cover image {
  background-color: #eee;
  border-radius: 16rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}

/* 标题 */
.title {
  display: -webkit-box;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 40rpx;
  margin: 0 20rpx;
  overflow: hidden;
  text-align: center;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 人气 */
.popularity {
  color: #999;
  display: block;
  font-size: 20rpx;
  line-height: 48rpx;
  margin: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  white-space: nowrap;
}
