.media-item {
  background-color: #fff;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .05),
              0 4px 8px rgba(0, 0, 0, .05),
              0 8px 16px rgba(0, 0, 0, .05);
  border-radius: 24rpx;
  position: relative;
  padding: 20rpx;
  position: relative;
  margin: 20rpx;
  transition: all .3s ease;
}

.media-item-hover {
  transform: scale(.98);
}

/* 封面 */
.cover {
  height: 0;
  padding-bottom: 56.25%;
  position: relative;
  z-index: 1;
}

.cover image {
  background-color: #eee;
  border-radius: 10rpx;
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
}

/* 标题 */
.title {
  display: -webkit-box;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 附加属性 */
.attr {
  align-items: center;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.attr text {
  font-size: 20rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


/* 分类名 */
.category {
  color: #999;
  max-width: 50%;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 阅读次数 */
.badge {
  background: linear-gradient(to right top, #f60, #fc0);
  border-radius: 30rpx 10rpx 15rpx 10rpx;
  color: #fff;
  flex-shrink: 0;
  padding: 0 25rpx;
  white-space: nowrap;
}

