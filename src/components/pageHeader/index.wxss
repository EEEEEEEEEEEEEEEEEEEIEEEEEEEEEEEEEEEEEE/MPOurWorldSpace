.page-header {
  align-items: center;
  display: flex;
  height: 140rpx;
  justify-content: space-between;
  padding: 0 40rpx;
}

.sub {
  margin: 20rpx;
}

.title, .title-sub {
  display: block;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 64rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.title-sub {
  color: #999;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 28rpx;
  overflow: hidden;
}
