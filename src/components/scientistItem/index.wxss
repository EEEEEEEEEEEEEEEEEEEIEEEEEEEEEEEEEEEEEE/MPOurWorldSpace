.scientis-item {
  padding: 20rpx;
  position: relative;
}

/* 头像 */
.avatar-wrap {
  background-color: #fff;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .05),
              0 4px 8px rgba(0, 0, 0, .05),
              0 8px 16px rgba(0, 0, 0, .05);
  border-radius: 50%;
  margin-bottom: 20rpx;
  padding: 8rpx;
  position: relative;
}

.avatar {
  height: 0;
  position: relative;
  padding-bottom: 100%;
}

.avatar image {
  border-radius: 50%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 2;
}

/* 用户名 */
.username {
  color: #999;
  display: block;
  font-size: 20rpx;
  overflow: hidden;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
