<import src="../../lib/wxParse/wxParse.wxml" />

<view class="wrap">

  <page-header title="{{ content.title }}" title-sub="{{ content.title_sub }}" />

  <view class="cover-wrap">
    <view class="cover">
      <image src="{{ content.cover }}" mode="scaleToFill" lazy-load />
      <image class="shadow" src="{{ content.cover }}" mode="scaleToFill" lazy-load />
    </view>
  </view>

  <view class="section detail">

    <view class="section-title">
      <text>读一读</text>
    </view>

    <template class="section-contents" is="wxParse" data="{{wxParseData:detail.nodes}}" />

  </view>

  <view class="section scientist">

    <view class="section-title">
      <text>相关的科学家</text>
    </view>

    <scroll-view class="scientist-list" scroll-x>
      <view class="inner">
        <block wx:for="{{ content.scientist }}" wx:key="{{ index }}">
          <scientist-item item="{{ item }}" />
        </block>
      </view>
    </scroll-view>

  </view>

  <view class="section">

    <view class="section-title">
      <text>相关的书籍</text>
    </view>

  </view>
  
  <collect-handler />
  
</view>