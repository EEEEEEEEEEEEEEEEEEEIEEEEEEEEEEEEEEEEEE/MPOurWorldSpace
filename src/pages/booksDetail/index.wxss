/* 封面 */
.cover-wrap {
  align-items: center;
  display: block;
  justify-content: center;
  margin: 0 auto;
  padding: 128rpx;
  position: relative;
  width: 320rpx;
  z-index: 1;
}

.cover {
  display: block;
  height: 0;
  padding-bottom: 144.8275%;
  position: relative;
}

.cover image {
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
}

/* 收藏按钮 */
.collect {
  color: #999;
  line-height: 96rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  text-align: center;
  width: 96rpx;
  z-index: 2;
}

/* 评分 */
.rate {
  align-items: center;
  display: flex;
  justify-content: center;
  padding: 40rpx;
}

.rate > text {
  color: #999;
  font-size: 24rpx;
  margin-left: 16rpx;
  padding: 0 8px;
}

/* 书籍信息 */
.info {
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.author {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.category {
  align-items: center;
  display: flex;
  justify-content: center;
  padding: 16rpx;
  position: relative;
  margin-top: -16rpx;
}

.category text {
  background-color: #333;
  border-radius: 32rpx;
  color: #fff;
  display: block;
  font-size: 24rpx;
  line-height: 58rpx;
  margin: 16rpx;
  padding: 0 32rpx;
}

/* 分组 */
.section {
  margin: 80rpx auto;
  position: relative;
}

.section-title {
  color: #999;
  display: block;
  font-size: 28rpx;
  margin: 0 80rpx 40rpx;
  text-align: center;
}

.section-contents {
  display: block;
  font-size: 28rpx;
  line-height: 56rpx;
  margin: 0 80rpx;
  text-align: center;
}

.section-toggle {
  display: none;
}

/* 操作 */
.options {
  margin: 80rpx;
  position: relative;
}
